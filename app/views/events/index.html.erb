<% if user_signed_in? %>
  <p>
    Welcome, <%= current_user.email %>!
    <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo_confirm: "Are you sure?", turbo_method: :delete } %>
  </p>
  
<% else %>
  <p>Welcome, Guest!</p>
  <p>
    <%= link_to "Login", new_user_session_path, method: :get %>
    <%= link_to "Sign up", new_user_registration_path, method: :get %>
  </p>
<% end %>

<h1>Past Events</h1>

<% if @past_events.any? %>
    <ul>
        <% @past_events.each do |event| %>
             <li><%= link_to "Event #{event.name}: #{event.date.strftime('%m/%d/%Y')}", event_path(event) %></li>
        <% end %>
    </ul>
<% else %>
    <p> No past events found.</p>
<% end %>

<h1>Upcoming Events</h1>

<% if @upcoming_events.any? %>
    <ul>
        <% @upcoming_events.each do |event| %>
             <li><%= link_to "Event #{event.name}: #{event.date.strftime('%m/%d/%Y')}", event_path(event) %></li>
        <% end %>
    </ul>
<% else %>
    <p> No upcoming events found.</p>
<% end %>

<% if @user %>
    <h3><%= link_to 'Your Events', user_path(@user) %></h3 >
<% end %>

